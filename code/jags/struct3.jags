model{
  # metab | methyl
  for (i in 1:N) {
    metab[i] ~ dnorm(gamma0 + gamma*methyl[i], tau)
    }
  # T1D | methyl, metab
  for (i in 1:N) {
    t1d[i] ~ dbern(q[i])
    logit(q[i]) <- int + alpha*metab[i] + beta*methyl[i]
    }
  
   # Very flat priors
   int ~ dnorm(0,100)
   alpha ~ dnorm(0,100)
   beta ~ dnorm(0,100)
   gamma0 ~ dnorm(0,100)
   gamma ~ dnorm(0,100)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
  