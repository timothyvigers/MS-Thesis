model{
  # methyl | metab
  for (i in 1:N) {
    methyl[i] ~ dnorm(gamma0 + gamma*metab[i], tau)
    }
  # T1D | methyl
  for (i in 1:N) {
    t1d[i] ~ dbern(q[i])
    logit(q[i]) <- beta0 + beta*methyl[i]
    }
  
  # Very flat priors
  beta0 ~ dnorm(0,0.0001)
  beta ~ dnorm(0,0.0001)
  gamma0 ~ dnorm(0,0.0001)
  gamma ~ dnorm(0,0.0001)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
  