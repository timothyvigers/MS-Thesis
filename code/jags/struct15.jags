model{
  # methyl | metab
  for (i in 1:N) {
    methyl[i] ~ dnorm(gamma0 + gamma*metab[i], tau)
    }
  # T1D | metab
  for (i in 1:N) {
    t1d[i] ~ dbern(q[i])
    logit(q[i]) <- alpha0 + alpha*metab[i]
    }
  
  # Very flat priors
  alpha0 ~ dnorm(0,100)
  alpha ~ dnorm(0,100)
  gamma0 ~ dnorm(0,100)
  gamma ~ dnorm(0,100)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
  