model{
  # T1D | metab
  for (i in 1:N) {
    t1d[i] ~ dbern(q[i])
    logit(q[i]) <- alpha0 + alpha*metab[i]
    }
  # methyl | T1D
  for (i in 1:N) {
    methyl[i] ~ dnorm(beta0 + beta*t1d[i], tau)
    }

   # Very flat priors
   alpha0 ~ dnorm(0,0.001)
   alpha ~ dnorm(0,0.001)
   beta0 ~ dnorm(0,0.001)
   beta ~ dnorm(0,0.001)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
