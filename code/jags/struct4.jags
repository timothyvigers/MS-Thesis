model{
  # T1D | methyl
  for (i in 1:N) {
    t1d[i] ~ dbern(q[i])
    logit(q[i]) <- beta0 + beta*methyl[i]
    }
  # metab | T1D, methyl
  for (i in 1:N) {
    metab[i] ~ dnorm(int + alpha*t1d[i] + gamma*methyl[i], tau)
    }
  
  
   # Very flat priors
   alpha ~ dnorm(0,100)
   beta0 ~ dnorm(0,100)
   beta ~ dnorm(0,100)
   int ~ dnorm(0,100)
   gamma ~ dnorm(0,100)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
  