model{
  # metab | T1D
  for (i in 1:N) {
    metab[i] ~ dnorm(alpha0 + alpha*t1d[i], tau)
    }
  # methyl | metab
  for (i in 1:N) {
    methyl[i] ~ dnorm(gamma0 + gamma*metab[i], tau)
    }
  
  # Very flat priors
  alpha0 ~ dnorm(0,0.0001)
  alpha ~ dnorm(0,0.0001)
  gamma0 ~ dnorm(0,0.0001)
  gamma ~ dnorm(0,0.0001)

  tau ~ dgamma(0.0001, 0.0001)
  sigma2 <- 1/tau
  }
  